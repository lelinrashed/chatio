doctype html
html
    head
        title Real time chat
        link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
    body
        nav.navbar.navbar-inverse(style="border-radius:0")
            .container
                .navbar-header
                a.navbar-brand(href="/") eChat
        .container
            .row
                .col-md-8
                    #userFormWrap
                        h1 Create Username
                        form#userForm
                            input#username.form-control(type="text", placeholder="Enter Username...")
                            br
                            button.btn.btn-default(type="submit") Submit
                    #mainWrap
                        h1 Speak Your Mind
                        form#chatForm
                            .form-group
                                textarea#chatInput.form-control(name="body", placeholder="Say something...")
                                br
                                button.btn.btn-default(type=submit) Submit
                                br
                                br
                .col-md-4
                    h3 Chat Users
                    ul.list-group
                        #users